{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Calculator with Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/src",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "../src/*": "${webRoot}/*"
            },
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}
